{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "dotnet publish Server.csproj -c Release -o out"
  },
  "deploy": {
    "numReplicas": 1,
    "startCommand": "dotnet out/Server.dll",
    "restartPolicyType": "ON_FAILURE",
    "healthcheckPath": "/health"
  }
}
